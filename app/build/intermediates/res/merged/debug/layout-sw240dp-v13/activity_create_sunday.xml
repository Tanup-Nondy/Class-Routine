<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/leaf2"
    tools:context="com.androidlime.routine.CreateSunday">
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="time"
        android:ems="10"
        android:id="@+id/ett"
        android:hint="Enter Time"

        android:textSize="20sp"
        android:textColorHint="#ffff00"
        android:layout_below="@+id/etc"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sunday"
        android:textSize="30sp"
        android:textColor="#fff"
        android:id="@+id/tvsun"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/btnmon"
        android:layout_alignEnd="@+id/btnmon" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:background="#006400"
        android:textColor="#fff"
        android:id="@+id/btns"

        android:layout_below="@+id/ett"
        android:layout_alignLeft="@+id/btnmon"
        android:layout_alignStart="@+id/btnmon" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/etc"

        android:textSize="20sp"
        android:textColorHint="#ffff00"
        android:hint="Enter Class Name"
        android:layout_below="@+id/tvsun"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Monday"

        android:background="#006400"
        android:textColor="#fff"
        android:id="@+id/btnmon"
        android:layout_below="@+id/btns"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="62dp" />
</RelativeLayout>


