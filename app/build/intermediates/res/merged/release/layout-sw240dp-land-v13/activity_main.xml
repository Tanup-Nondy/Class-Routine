<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.androidlime.routine.MainActivity"
    android:background="@drawable/leaf2"
    >


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View The Routine"
        android:id="@+id/tv1"
        android:textSize="20sp"
        android:textColor="#fff"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View"
        android:id="@+id/btnv"
        android:textColor="#fff"
        android:background="#006400"
        android:layout_below="@+id/tv1"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create a new Routine"
        android:textSize="20sp"
        android:textColor="#fff"
        android:id="@+id/tv2"
        android:layout_below="@+id/btnv"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create"
        android:background="#006400"
        android:textColor="#fff"
        android:id="@+id/btnc"
        android:layout_below="@+id/tv2"
        android:layout_alignLeft="@+id/btnv"
        android:layout_alignStart="@+id/btnv" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Developed By"
        android:textSize="15sp"
        android:textColor="#fff"
        android:id="@+id/tv3"
        android:layout_below="@+id/btnc"
        android:layout_alignLeft="@+id/btnc"
        android:layout_alignStart="@+id/btnc" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/link"
        android:textSize="15sp"

        android:textColorLink="#0000ff"
        android:id="@+id/tv4"
        android:layout_below="@+id/tv3"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dept. of CSE,University of Barisal"
        android:textSize="15sp"
        android:textColor="#fff"
        android:id="@+id/tv5"
        android:layout_below="@+id/tv4"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
